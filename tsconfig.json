{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/*.js",
    "src/*.json"
  ],
}
